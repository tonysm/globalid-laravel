{
    "name": "tonysm/globalid-laravel",
    "description": "Identify app models with a URI. Inspired by the globalid gem.",
    "keywords": [
        "tonysm",
        "laravel",
        "globalid",
        "globalid-laravel"
    ],
    "homepage": "https://github.com/tonysm/globalid-laravel",
    "license": "MIT",
    "authors": [
        {
            "name": "Tony Messias",
            "email": "tonysm@hey.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/contracts": "^8.47|^9.0|^10.0",
        "spatie/laravel-package-tools": "^1.9.2"
    },
    "require-dev": {
        "nunomaduro/collision": "^5.3|^6.0",
        "orchestra/testbench": "^6.24|^7.0|^8.0",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "Tonysm\\GlobalId\\": "src",
            "Tonysm\\GlobalId\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tonysm\\GlobalId\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "./vendor/bin/testbench package:test --parallel --no-coverage",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Tonysm\\GlobalId\\GlobalIdServiceProvider"
            ],
            "aliases": {
                "GlobalId": "Tonysm\\GlobalId\\GlobalIdFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
